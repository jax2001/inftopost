#include <iostream>
using namespace std;

class Stack{
    char *arr;
    int top=-1;
    int capacity;
public:
    Stack(int n=5){
        arr = (char *)calloc(n, sizeof(char));
        this->capacity = n;
    }
    
    char peek(){
        if(isEmpty()){
            cout << "Stack Underflow" << endl;
            exit(0);
        }else{
            return arr[top];
        }
    }
    
    int getTop(){
        return top;
    }
    
    char getElementAt(int n){
        return arr[n];
    }
    
    bool isEmpty(){
        return top==-1;
    }
    
    bool isFull(){
        return top==capacity-1;
    }
    
    void push(char ch){
        if(isFull()){
            cout << "Stack overflow" << endl;
        }else{
            arr[++top] = ch;
        }
    }
    
    char pop(){
        if(isEmpty()){
            cout << "Stack Underflow" << endl;
            exit(0);
        }else{
            return arr[top--];
        }
    }
};

int main() {
    
    return 0;
}
